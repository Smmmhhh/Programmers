-- 코드를 입력하세요
SELECT      C.FLAVOR
        ,   TOTAL_ORDER

FROM 
(
    SELECT A.FLAVOR, SUM(A.TOTAL_ORDER + B.JULY_TOTAL_ORDER) AS TOTAL_ORDER

    FROM 
    (
        SELECT FLAVOR, SUM(TOTAL_ORDER) AS TOTAL_ORDER
        FROM FIRST_HALF
        GROUP BY FLAVOR
    ) A
    INNER JOIN 
    (
        SELECT FLAVOR, SUM(TOTAL_ORDER) AS JULY_TOTAL_ORDER
        FROM JULY
        GROUP BY FLAVOR
    )B

     ON A.FLAVOR = B.FLAVOR
    
    GROUP BY        A.FLAVOR
    
    ORDER BY 2 DESC
)C
WHERE ROWNUM <= 3
