-- 코드를 입력하세요
SELECT      C.PRODUCT_ID
        ,   C.PRODUCT_NAME
        ,   C.TOTAL_SALES * D.PRICE AS TOTAL_SALES

FROM
(
    SELECT       A.PRODUCT_ID
             ,   A.PRODUCT_NAME
             ,   SUM(B.AMOUNT) AS TOTAL_SALES
    FROM FOOD_PRODUCT A
    INNER JOIN FOOD_ORDER B
     ON A.PRODUCT_ID = B.PRODUCT_ID
    WHERE TO_CHAR(B.PRODUCE_DATE, 'YYYY-MM') = '2022-05'
    GROUP BY A.PRODUCT_ID, A.PRODUCT_NAME
)C
INNER JOIN FOOD_PRODUCT D
 ON C.PRODUCT_ID = D.PRODUCT_ID
ORDER BY 3 DESC, 1